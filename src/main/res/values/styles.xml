<resources>
    <style name="BotonActivo">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="BotonInactivo">
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorOnInactive</item>
    </style>

    <style name="CircularButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="BottomNavIndicatorNone" parent="">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>
